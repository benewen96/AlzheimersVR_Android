<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vr.jbappco.AlzheimersVR.MainActivity">


    <com.google.vr.sdk.widgets.video.VrVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:scrollbars="@null"
        android:layout_height="250dip"
        android:background="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/video_view"
        android:onClick="playVideo" />

    <EditText
        android:layout_width="600px"
        android:layout_height="10px"
        android:id="@+id/url_field"
        android:layout_toStartOf="@+id/play_btn"
        android:text="http://mobile.360heros.com/producers/4630608605686575/5579686187673361/video/video_7776b10db31f349ede5d253b7744e110.mp4"
        android:maxWidth="600px"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/video_view" />

</RelativeLayout>
